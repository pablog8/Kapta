<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kapta.Ejercicios.SelectTypeExercise"
             Title="Elige el tipo de ejercicio a añadir">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <Button x:Name="ejerciciopersonalizado"
                    HeightRequest="70"
                    BorderRadius="35"
                            Text="Ejercicio personalizado"
                            BackgroundColor="Navy"
                            TextColor="White"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="Center" />
            <Button x:Name="ejercicioapp"
                     HeightRequest="70"
                     BorderRadius="35"
                            Text="Ejercicio de la aplicación"
                            BackgroundColor="Navy"
                            TextColor="White"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>